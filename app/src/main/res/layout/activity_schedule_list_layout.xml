<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Course" />

    <TextView
        android:id="@+id/textView2_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room"
        android:layout_marginStart="88dp"
        android:layout_above="@+id/textView3_teacher"
        android:layout_toEndOf="@+id/textView3_teacher" />

    <TextView
        android:id="@+id/textView3_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teacher"
        android:layout_below="@+id/textView_course"
        android:layout_alignStart="@+id/textView_course" />

    <TextView
        android:id="@+id/textView4_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:layout_below="@+id/textView2_room"
        android:layout_alignStart="@+id/textView2_room" />

    <TextView
        android:id="@+id/textView5_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End"
        android:layout_below="@+id/textView2_room"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="73dp" />
        android:layout_marginEnd="72dp" />
</RelativeLayout>